{% extends 'base.html.twig' %}

{% block title %}Hello PropertyController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<hr>
<h2> {{ property.title }} </h2>
<div class="carousel-wrapper">
    <div id="propertyCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            {% for image in property.images %}
                <div class="carousel-item {% if loop.first %}active{% endif %}">
                    <div class="overlay-text">{{ property.operationType}}</div>
                    <img src="{{ asset('uploads/' ~ property.reference ~ '/' ~ image) }}" class="d-block w-100" alt="Imagen de {{ property.title }}">
                </div>
            {% endfor %}
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#propertyCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#propertyCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <hr>
    <p> {{ property.area }} </p>
    <p class="price">{{ property.price|number_format(0, ',', '.') }} â‚¬ <span class="price-remarks"> {{ property.priceobservation }} </span></p> <!-- el 0 indica el numero de decimales --> 
    <p> {{ property.longDescription }} </p>
</div>

    
    
    




{% endblock %}
